<p style="color: green"><%= notice %></p>

 


<h1>Products</h1>


<%= search_form_for @q do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title_cont, class: 'form-control' %>
  <%= f.submit class: 'btn btn-primary' %>
<% end %>



<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th scope="col">id</th>
      <th scope="col"><%= sort_link(@q, :title) %>
</th>
      <th scope="col"><%= sort_link(@q, :price) %></th>
      <th scope="col"><%= sort_link(@q, :status) %></th>
      <th scope="col">User</th>
    </tr>
  </thead>
  <tbody>
    <% @products.each do |product| %>
      <%= render product %>    
    <%end%>
   </tbody>
</table>


<%= will_paginate @products, list_classes: %w(pagination justify-content-end) %>


