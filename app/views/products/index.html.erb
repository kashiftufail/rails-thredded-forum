<p style="color: green"><%= notice %></p>

<h1>Products</h1>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th scope="col">id</th>
      <th scope="col">title</th>
      <th scope="col">Price</th>
      <th scope="col">Status</th>
      <th scope="col">User</th>
    </tr>
  </thead>
  <tbody>
    <% @products.each do |product| %>
      <%= render product %>    
    <%end%>
   </tbody>
</table>




